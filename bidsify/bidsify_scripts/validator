folders=`ls -d */`
for i in $folders;
do
	cd $i
	subfolders=`ls -d */`
	for j in $subfolders;
	do
		cd $j
		files=`ls`
		for k in $files;
		do
			if [[ $k == *"_bold"*".json"* ]]; then
				`sed -i 's/{/{\n\t"TaskName": "rest",/g' $k`
				echo "Adding Task name in functional metadata file"
			fi
		done
		cd ..
	done
	cd ..
done
